rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function userRole(uid) {
      return exists(/databases/$(database)/documents/users/$(uid))
        ? get(/databases/$(database)/documents/users/$(uid)).data.role
        : '';
    }

    function isAdmin() {
      return signedIn() &&
        (
          request.auth.token.admin == true ||
          userRole(request.auth.uid) in ['admin', 'super_admin']
        );
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin();

      allow update: if isAdmin() ||
        (
          isOwner(userId) &&
          !request.resource.data
            .diff(resource.data)
            .changedKeys()
            .hasAny(['role'])
        );

      allow delete: if isOwner(userId) || isAdmin();

      match /orders/{orderId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /bank_accounts/{accountId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /withdrawals/{withdrawalId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /wallet_ledger/{ledgerId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /fcm_tokens/{token} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /Addresses/{addressId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      match /{subCollection}/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Allow admin collectionGroup queries and top-level docs named orders/wallet_ledger.
    match /{path=**}/orders/{orderId} {
      allow read, write: if isAdmin();
    }

    match /{path=**}/wallet_ledger/{ledgerId} {
      allow read: if isAdmin();
    }

    match /merchandising_banners/{bannerId} {
      allow read, write: if isAdmin();
    }

    match /admin_audit_logs/{logId} {
      allow read, create: if isAdmin();
      allow update, delete: if false;
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /brands/{brandId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /coupons/{couponId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /payment_issues/{issueId} {
      allow read, write: if isAdmin();
    }

    match /risk_flags/{flagId} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
